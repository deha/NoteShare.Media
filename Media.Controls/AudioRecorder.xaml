<UserControl x:Class="Media.Controls.AudioRecorder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="125" d:DesignWidth="410" Height="125" Width="410">
    
    <Grid x:Name="LayoutRoot" Background="Black">
        <Button Content="Start rec" Height="23" HorizontalAlignment="Left" Margin="12,90,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" />
        <Button Content="Stop Rec" Height="23" HorizontalAlignment="Left" Margin="93,90,0,0" Name="button2" VerticalAlignment="Top" Width="75" Click="button2_Click" />
        <Ellipse Height="20" HorizontalAlignment="Left" Margin="378,12,0,0" Name="recCircle" Stroke="Red" StrokeThickness="1" VerticalAlignment="Top" Width="20" Fill="Red" Visibility="Collapsed" />
    </Grid>
</UserControl>
